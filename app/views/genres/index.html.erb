<h1>分野一覧</h1>


<p><%= link_to "分野の追加", new_genre_path %></p>

<h2>分野一覧</h2>

<table rules="all">
    <thead>
      <tr>
        <th>分野名</th>
        <th>更新日時</th>
        <th>編集 削除</th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_name %> </td>
        <td><%= genre.updated_at %></td>
        <td>
            <%= link_to "編集", edit_genre_path(genre.id) %>
            <%= link_to "削除", genre_path(genre.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>

